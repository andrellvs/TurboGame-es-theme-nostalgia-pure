<theme>
<formatVersion>4</formatVersion>
 

<!-- System View -->

<feature supported="carousel">
<view name="system">
  <video name="md_video" extra="true">
      <path>./_assets/backgrounds/${system.theme}.mp4</path>
	  <tile>false</tile>
      <color>FFFFFFFF</color>
     <origin>0 0</origin>
		<pos>0 0</pos>
		<size>1 1</size>
      <maxSize>1 1</maxSize>
      <delay>0</delay>
	  <showSnapshotNoVideo>true</showSnapshotNoVideo>
	<showSnapshotDelay>true</showSnapshotDelay>
 </video>

 <image name="background" extra="true">
	<tile>false</tile>
	<path>./_assets/system-global-bg.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
 </image>
 <text name="shortdescription" extra="true">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>center</alignment>
	<forceUppercase>1</forceUppercase>
	<fontSize>0.03</fontSize>
	<color>FFFFFF</color>
	<origin>0.5 0.5</origin>
	<pos>0.232 0.25</pos>
	<size>0.32 0.1</size>
 </text>

 <image name="logo">
	<path>./_assets/logos/${system.theme}.svg</path>
	<color>FFFFFF</color>
 </image>

 <carousel name="systemcarousel">
	<type>vertical_wheel</type>
	<color>00000000</color>
	<origin>0.5 0.5</origin>
	<pos>0.232 0.415</pos>
	<size>1 0.16</size> 
	<logoScale>0.75</logoScale>
	<logoSize>0.32 0.20</logoSize>
	<logoRotationOrigin>100 0.5</logoRotationOrigin>
	<logoRotation>0.5</logoRotation>
	<maxLogoCount>2</maxLogoCount>
 </carousel>

 <text name="systemInfo">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>center</alignment>
	<backgroundColor>00000000</backgroundColor>
	<color>FFFFFF</color>
	<origin>0.5 0.5</origin>
	<pos>0.232 0.77</pos>
	<size>0.980 0.050</size>
	<fontSize>0.025</fontSize>
 </text>
 
 <text name="longdescription" extra="true">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>center</alignment>
	<forceUppercase>0</forceUppercase>
	<fontSize>0.02</fontSize>
	<color>666666</color>
	<origin>0.5 0.5</origin>
	<pos>0.232 0.58</pos>
	<size>0.20 0.1</size>
 </text>
 
 <helpsystem name="help">
    <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
    <fontSize>0.021</fontSize>
	<pos>0.054 0.975</pos>
	<textColor>818181</textColor>
    <iconColor>818181</iconColor>
 </helpsystem>
  
</view>
</feature>


<!-- Gamelist View -->

<view name="detailed, video">

 <image name="background" extra="true">
	<tile>false</tile>
	<path>./_assets/ingame-global-bg.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
 </image>

 <image name="logo2" extra="true">
	<path>./_assets/logos/${system.theme}.svg</path>
	<color>ffffff</color>
	<origin>0.5 0.5</origin>
	<pos>0.268 0.13</pos>
	<maxSize>0.24 0.10</maxSize>
 </image>
 
 <text name="shortdescription" extra="true">
	<pos>1 1</pos>
 </text>
 
 <text name="longdescription" extra="true">
	<origin>0 0</origin>
	<pos>1 1</pos>
 </text>
 
<textlist name="gamelist">
	<selectorColor>ffffff</selectorColor>
	<selectorImagePath>./_assets/icon.png</selectorImagePath>
	<scrollSound>./sounds/se_sys_cursor.wav</scrollSound>
	<selectedColor>FFFFFF</selectedColor>
	<selectorHeight>.04</selectorHeight>
	<primaryColor>bbbbbb</primaryColor>
	<secondaryColor>bbbbbb</secondaryColor>
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>left</alignment>
	<forceUppercase>1</forceUppercase>
	<pos>0.07 0.264</pos>
	<size>0.395 0.62</size>
	<fontSize>0.022</fontSize>
	<lineSpacing>1.54</lineSpacing>
	<horizontalMargin>0.05</horizontalMargin>
</textlist>

<helpsystem name="help">
    <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
    <fontSize>0.021</fontSize>
	<pos>0.054 0.975</pos>
	<textColor>818181</textColor>
    <iconColor>818181</iconColor>
</helpsystem>

